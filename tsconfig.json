{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "dom",
      "DOM.Iterable",
      "ESnext"
    ],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
